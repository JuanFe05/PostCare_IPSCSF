# Configuración de MySQL
MYSQL_ROOT_PASSWORD=
MYSQL_DATABASE=postcare_db
MYSQL_USER=
MYSQL_PASSWORD=

# JWT / Security (backend)
JWT_SECRET=
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=60

# Orígenes CORS (separados por comas). El valor predeterminado del backend incluye http://localhost:41777.
# Ejemplos: http://localhost:41777 o http://192.168.1.100:41777.

# Admin user - La contraseña se hashea automáticamente con bcrypt durante la migración
ADMIN_USERNAME=admin
ADMIN_PASSWORD=

# Opcional: Opciones de tiempo de ejecución
# Ejecutar la creación de la tabla de inicio cuando se inicia el backend (establecer en verdadero para habilitar)
RUN_STARTUP_TABLES=true

# Base de datos externa (SQL Server)
EXTERNAL_DB_HOST=
EXTERNAL_DB_PORT=1433
EXTERNAL_DB_NAME=
EXTERNAL_DB_USER=
EXTERNAL_DB_PASSWORD=
