# MySQL Configuration
MYSQL_ROOT_PASSWORD=
MYSQL_DATABASE=postcare_db
MYSQL_USER=
MYSQL_PASSWORD=

# JWT / Security (backend) - IMPORTANT: Change this to a random 32+ character string in production
JWT_SECRET=
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=60

# CORS origins (comma-separated). Backend default includes http://localhost:41777
# Examples: http://localhost:41777 or http://192.168.1.100:41777

# Admin user - La contraseña se hashea automáticamente con bcrypt durante la migración
ADMIN_USERNAME=admin
ADMIN_PASSWORD=

# Optional: Runtime options
# Execute startup table creation when backend starts (set to true to enable)
RUN_STARTUP_TABLES=true

# External Database (SQL Server)
EXTERNAL_DB_HOST=
EXTERNAL_DB_PORT=1433
EXTERNAL_DB_NAME=
EXTERNAL_DB_USER=
EXTERNAL_DB_PASSWORD=
